<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Mapping</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/static/styles.css" rel="stylesheet">
  <style type="text/css">
    #literally {
      height: 600px;
    }
  </style>
</head>
<body>
  <button id="send" class="btn btn-primary">Send</button>

  <div id="literally"></div>

  <script src="/static/app.js"></script>
  <script type="text/javascript">
    var drawer = LC.init(document.getElementById('literally'), {
      imageURLPrefix: '/static/img',
      imageSize: {
        height: 800
      }
    });

    var config = JSON.parse('<%- JSON.stringify({
      device: device
    })%>');

    $('#send').click(function(ev) {
      drawer.getImage().toBlob(function(blob) {
        var data = new FormData();
        data.append('device', config.device);
        data.append('author', 'Unknown');
        data.append('image', blob);
        console.log(data);
        $.ajax({
          url: '/api/drawing',
          method: 'POST',
          data: data,
          contentType: false,
          processData: false
        })
      }, 'image/png');
    });
  </script>
</body>
</html>
